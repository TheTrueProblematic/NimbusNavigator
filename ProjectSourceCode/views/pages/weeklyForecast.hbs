        @import url('https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Poppins:wght@300;400;600&display=swap');

        body {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
            color: #666576;
            background-color: #c8c7be;
        }

        .navbar {
            position: fixed;
            top: 0;
            width: 100%;
            height: 60px;
            background-color: #666576;
            border-bottom: 2px solid #c8c7be !important;
            box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
            z-index: 1000;
            color: #0d1a12 !important;
        }

        h1 {
            text-align: center;
            padding: 20px;
            background-color: #9dafb5;
            color: white;
            margin: 60px 0 0 0;
            font-size: 32px;
            font-family: 'Playfair Display', serif;
        }

        .forecast-table {
            display: grid;
            grid-template-columns: repeat(7, 1fr);
            gap: 1px;
            background-color: #b5a6b8;
            padding: 10px;
        }

        .forecast-day {
            background: linear-gradient(145deg, #FFFFFF, #ece7ed);
            padding: 15px;
            text-align: center;
            border: 1px solid #666576;
            display: flex;
            flex-direction: column;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(181, 166, 184, 0.2);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .forecast-day:hover {
            background: linear-gradient(145deg, #ece7ed, #FFFFFF);
            transform: scale(1.05);
            box-shadow: 0 8px 12px rgba(181, 166, 184, 0.4);
        }

        .day-header {
            font-weight: bold;
            font-size: 18px;
            margin-bottom: 10px;
            background-color: #666576;
            color: white;
            padding: 5px 0;
            border-radius: 5px;
            font-family: 'Poppins', sans-serif;
        }

        .weather-details {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
            justify-content: center;
            gap: 10px;
        }

        .weather-item {
            font-size: 14px;
        }

        footer {
            text-align: center;
            margin-top: 20px;
            padding: 10px;
            background-color: #9dafb5;
            color: white;
            font-family: 'Poppins', sans-serif;
        }
    </style>
</head>

